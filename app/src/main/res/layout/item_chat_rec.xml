<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/cardview_default_elevation"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recText"
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/lato"
                android:layout_height="wrap_content"
                android:text="@string/the_quick_brown_fox_jumps_over_the_lazy_dog_the_quick_brown_fox_jumps_over_the_lazy_dog"/>
            <TextView
                android:id="@+id/recTime"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryVariant"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="@font/lato"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activities"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/recImg"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/logo"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>